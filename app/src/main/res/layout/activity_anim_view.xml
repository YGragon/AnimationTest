<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnimViewActivity">

    <ImageView
        android:id="@+id/iv_view_anim_show_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <Button
            android:id="@+id/btn_view_show_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平移"
            />
        <Button
            android:id="@+id/btn_view_show_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转"
            />
        <Button
            android:id="@+id/btn_view_show_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放"
            />
        <Button
            android:id="@+id/btn_view_show_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="透明度"
            />
    </LinearLayout>

</LinearLayout>